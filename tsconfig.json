{
  "compilerOptions": {
    "lib": ["es2017", "dom"],
    "outDir": "./dist",
    "allowJs": true,
    "jsx": "react",
    "target": "es5",
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "tests"]
}
